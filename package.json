{
  "name": "document-organizer",
  "version": "0.1.13",
  "description": "A basic application for organizing your documents.",
  "repository": "github:brumik/document-organizer",
  "main": ".webpack/main",
  "scripts": {
    "clean": "rm -rf dist .webpack",
    "start": "electron-forge start",
    "build": "yarn clean && electron-forge package",
    "lint": "eslint --ext .ts,.tsx .",
    "app:dist": "yarn build && electron-builder"
  },
  "keywords": [
    "document",
    "organization",
    "productivity",
    "reminders"
  ],
  "author": {
    "name": "Levente Berky",
    "email": "levente.berky@gmail.com"
  },
  "license": "MIT",
  "build": {
    "appId": "me.berky.levente.document-organizer",
    "productName": "Document Organizer",
    "linux": {
      "category": "Utility",
      "target": "snap",
      "icon": "./src/render/logo_512x512.png"
    },
    "win": {
      "publish": "github",
      "target": "nsis",
      "icon": "./src/render/logo_512x512.png"
    }
  },
  "config": {
    "forge": {
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/render/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.61",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-redux": "^7.1.20",
    "@types/react-router-dom": "^5.3.2",
    "@types/styled-components": "^5.1.18",
    "@vercel/webpack-asset-relocator-loader": "^1.7.0",
    "css-loader": "^6.5.1",
    "electron": "16.0.2",
    "electron-builder": "^22.14.13",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.1",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fork-ts-checker-webpack-plugin": "^6.4.2",
    "node-loader": "^2.0.0",
    "prettier": "^2.5.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.2",
    "url-loader": "^4.1.1"
  },
  "dependencies": {
    "@patternfly/react-core": "^4.175.4",
    "@patternfly/react-icons": "^4.26.4",
    "electron-updater": "^5.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.0.2",
    "redux": "^4.1.2",
    "styled-components": "^5.3.3"
  }
}
